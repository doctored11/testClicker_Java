<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id = "@+id/background">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="@color/pg_1"
            android:endColor="@color/pg_2"
            >
        </gradient>
    </shape>
</item>
    <item android:id="@+id/progress">
        <clip>
            <shape xmlns:android="http://schemas.android.com/apk/res/android" >
                <gradient
                    android:angle="0"
                    android:startColor="@color/pg_5"
                    android:centerColor="@color/pg_4"
                    android:endColor="@color/pg_3"
                    android:centerX="0.05"
                    android:endX="0.6"
                    >
                </gradient>


            </shape>
        </clip>

    </item>
</layer-list>